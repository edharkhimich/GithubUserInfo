<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_icon"
        android:layout_marginTop="10dp"
        android:layout_width="30dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_image_icon"
        android:layout_height="35dp" />

    <TextView
        android:id="@+id/repos_name"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Name : CyprusApp"/>

    <TextView
        android:id="@+id/repos_language"
        android:layout_toRightOf="@+id/image_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/repos_name"
        android:layout_marginLeft="10dp"
        android:text="Language : Java"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="7dp"
        android:layout_below="@id/repos_language"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>